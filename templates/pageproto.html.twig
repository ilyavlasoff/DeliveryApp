{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ include('common.html.twig') }}
{% endblock %}

{% block body %}
    <div class="page">
        <nav>
            <div class="nav-wrapper teal lighten-1">
                <img src="{{ asset('public/media/mainlogo.png') }}" alt="Logo">
                <ul class="right hide-on-med-and-down">
                    {% if (app.user) %}
                    <li><a href="{{ path('receiver_page') }}">{{ app.user.getUsername() }}</a></li>
                    <li><a href="{{ path('app_logout') }}">Log out</a></li>
                    {% else %}
                    <li><a href="{{ path('app_login') }}">Login</a></li>
                    <li><a href="{{ path('app_register') }}">Register</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="row main">
            <div class="col s2 grey lighten-2 z-depth-2 menubar">
                <div class="col usercard flex-center">
                    <div class="col s3">
                        <img src="{{ asset("public/media/default_user_man.png") }}" class="circle responsive-img" alt="User photo">
                    </div>
                    <div class="col s9">
                        <p>Test User</p>
                    </div>
                </div>
                <ul class="collapsible">
                    <li>
                        <a href="{{ path('main_page') }}">
                            <div class="collapsible-header hoverable blue-grey-text"><i class="material-icons">dashboard</i>Dashboard</div>
                        </a>
                        <div class="collapsible-body"><span>Lorem ipsum dolsor sit amet.</span></div>
                    </li>
                    <li>
                        <a href="{{ path('receiver_page') }}">
                            <div class="collapsible-header hoverable blue-grey-text"><i class="material-icons">person</i>My account</div>
                        </a>
                        <div class="collapsible-body"><span>Lorem ipsum dolsor sit amet.</span></div>
                    </li>
                    <li>
                        <a href="{{ path('receiver_deliveries') }}">
                            <div class="collapsible-header hoverable blue-grey-text"><i class="material-icons">work</i>My deliveries</div>
                        </a>
                        <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                    </li>
                    <li>
                        <a href="{{ path('receiver_tracking') }}">
                            <div class="collapsible-header hoverable blue-grey-text"><i class="material-icons">place</i>Tracking</div>
                        </a>
                        <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                    </li>
                    <li>
                        <a href="{{ path('receiver_payments') }}">
                            <div class="collapsible-header hoverable blue-grey-text"><i class="material-icons">credit_card</i>My payments</div>
                        </a>
                        <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                    </li>
                    <li>
                        <a href="{{ path('receiver_payments') }}">
                            <div class="collapsible-header hoverable blue-grey-text"><i class="material-icons">settings</i>My settings</div>
                        </a>
                        <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                    </li>
                </ul>
            </div>
            <div class="col s10 contents">
                {% block pagecontent %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}